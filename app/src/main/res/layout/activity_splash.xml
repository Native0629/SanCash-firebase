    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/green_back"
        android:layout_gravity="center"
        android:layout_width="210dp"
        android:layout_height="60dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="San"
            android:layout_toLeftOf="@+id/tv_dollar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_dollar"
            android:gravity="center"
            android:textColor="@color/logo_back"
            android:textStyle="bold"
            android:textSize="33dp"
            android:text="$"
            android:layout_marginHorizontal="12dp"
            android:layout_centerInParent="true"
            android:background="@drawable/graycircle"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_toRightOf="@+id/tv_dollar"
            android:gravity="center"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Cash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="Borrow money"
            android:textColor="@color/white_text"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="from friends"
            android:textColor="@color/white_text"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="or"
            android:textColor="@color/white_text"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="relatives"
            android:textColor="@color/white_text"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/sign_in"
        android:background="@drawable/button_back"
        android:layout_width="match_parent"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/btn_text"
        android:textSize="25dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:layout_height="60dp" />
    <Button
        android:id="@+id/login"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_back"
        android:layout_width="match_parent"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/btn_text"
        android:layout_marginHorizontal="30dp"
        android:textSize="25dp"
        android:layout_height="60dp" />
