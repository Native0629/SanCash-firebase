    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/green_back"
        android:layout_gravity="center"
        android:layout_width="210dp"
        android:layout_height="60dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="San"
            android:layout_toLeftOf="@+id/tv_dollar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_dollar"
            android:gravity="center"
            android:textColor="@color/logo_back"
            android:textStyle="bold"
            android:textSize="33dp"
            android:text="$"
            android:layout_marginHorizontal="12dp"
            android:layout_centerInParent="true"
            android:background="@drawable/graycircle"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_toRightOf="@+id/tv_dollar"
            android:gravity="center"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Cash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/create_group"
                android:text="Create a group"
                android:textSize="25dp"
                android:editable="false"
                android:background="@drawable/button_back"
                android:inputType="textPersonName"
                android:textColor="@color/btn_text"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/join_group"
                android:text="Join a group"
                android:layout_marginTop="35dp"
                android:textSize="25dp"
                android:editable="false"
                android:gravity="center"
                android:background="@drawable/button_back"
                android:inputType="textPersonName"
                android:textColor="@color/btn_text"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
